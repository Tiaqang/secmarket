<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dimen_10_dp"
    tools:context="com.project.my.secmarket.Login.Register">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/re_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/ErrorAppearance">

        <EditText
            android:id="@+id/re_edit_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="设置你的用户名"/>

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/re_password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/ErrorAppearance">

        <EditText
            android:id="@+id/re_edit_password1"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="设置你的密码（6~18个字符）"/>

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/re_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/ErrorAppearance">

        <EditText
            android:id="@+id/re_edit_password2"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="确认你的密码"/>

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/re_telnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/ErrorAppearance">

        <EditText
            android:id="@+id/re_edit_telnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入电话号码"/>

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/re_tong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/ErrorAppearance">

        <EditText
            android:id="@+id/re_edit_tong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入一卡通号"/>

    </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dividing_line_width_height"
            android:background="@color/mine_dividing_line_color" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Spinner
                android:id="@+id/re_spinner_sex"
                android:entries="@array/sex"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_10_dp"
                android:layout_width="@dimen/dimen_80_dp"
                android:layout_height="@dimen/dimen_40_dp">

            </Spinner>
        <Spinner
            android:id="@+id/re_spinner"
            android:layout_toLeftOf="@id/re_spinner_sex"
            android:layout_marginRight="@dimen/dimen_10_dp"
            android:entries="@array/major"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40_dp" />
        </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_centerInParent="true"
            android:id="@+id/re_submit"
            android:text="提交"
            android:textSize="16sp"
            android:layout_width="@dimen/dimen_300_dp"
            android:layout_height="@dimen/dimen_50_dp"
            />
    </RelativeLayout>
</LinearLayout>
